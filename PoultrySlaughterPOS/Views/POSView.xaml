<!-- PoultrySlaughterPOS/Views/POSView.xaml -->
<UserControl x:Class="PoultrySlaughterPOS.Views.POSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PoultrySlaughterPOS.Converters"
             xmlns:viewmodels="clr-namespace:PoultrySlaughterPOS.ViewModels"
             xmlns:controls="clr-namespace:PoultrySlaughterPOS.Controls"
             x:Name="POSViewControl"
             FlowDirection="RightToLeft"
             FontFamily="Segoe UI"
             Background="#F8FAFC">

    <UserControl.Resources>
        <!-- Enhanced Value Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:WeightConverter x:Key="WeightConverter"/>
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:DebtColorConverter x:Key="DebtColorConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.06" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Card Style -->
        <Style x:Key="HeaderCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E293B" Offset="0"/>
                        <GradientStop Color="#334155" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <!-- Search Results Card Style -->
        <Style x:Key="SearchCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E40AF" Offset="0"/>
                        <GradientStop Color="#3B82F6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <!-- Edit Mode Card Style -->
        <Style x:Key="EditModeCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#DC2626" Offset="0"/>
                        <GradientStop Color="#EF4444" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Modern Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Search Button Style -->
        <Style x:Key="SearchButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Quick Payment Button Style -->
        <Style x:Key="QuickPaymentButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#8B5CF6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Modern Input Styles -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" 
                                              Background="Transparent"
                                              BorderThickness="0"
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press"/>
                                <ContentPresenter x:Name="ContentSite" 
                                                  IsHitTestVisible="False" 
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  Margin="{TemplateBinding Padding}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"/>
                                <Popup x:Name="Popup" 
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True" 
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Grid MaxHeight="200" MinWidth="{TemplateBinding ActualWidth}">
                                        <Border Background="White" 
                                                BorderBrush="#E5E7EB" 
                                                BorderThickness="1" 
                                                CornerRadius="6">
                                            <ScrollViewer>
                                                <StackPanel IsItemsHost="True"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Enhanced DataGrid Style with Explicit Text Visibility -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F5F9"/>
            <Setter Property="RowHeight" Value="52"/>
            <Setter Property="ColumnHeaderHeight" Value="56"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#1F2937"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#EFF6FF"/>
                                <Setter Property="Foreground" Value="#1E40AF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <Style x:Key="ModernDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                    <Setter Property="Foreground" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Simplified DataGrid Input Style with Guaranteed Text Visibility -->
        <Style x:Key="TableInputCellStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="CaretBrush" Value="#3B82F6"/>
            <Setter Property="SelectionBrush" Value="#BFDBFE"/>
            <Setter Property="SelectionTextBrush" Value="#1F2937"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="Foreground" Value="#111827"/>
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9FAFB"/>
                    <Setter Property="BorderBrush" Value="#6B7280"/>
                </Trigger>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="Background" Value="#F3F4F6"/>
                    <Setter Property="Foreground" Value="#4B5563"/>
                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Text Style -->
        <Style x:Key="IconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Search Result Item Style -->
        <Style x:Key="SearchResultItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F9FF"/>
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Main Scrollable Container -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- NEW: Invoice Search Section -->
                <RowDefinition Height="Auto"/>
                <!-- NEW: Edit Mode Indicator -->
                <RowDefinition Height="Auto"/>
                <!-- Customer & Truck Selection -->
                <RowDefinition Height="Auto"/>
                <!-- Invoice Items Section -->
                <RowDefinition Height="Auto"/>
                <!-- Enhanced Summary Section with Payment Processing -->
                <RowDefinition Height="Auto"/>
                <!-- Actions -->
            </Grid.RowDefinitions>

            <!-- System Header -->
            <Border Grid.Row="0" 
                    Padding="32,20" 
                    Margin="0,0,0,24">
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource HeaderCardStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#DC2626" Offset="0"/>
                                            <GradientStop Color="#EF4444" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="نظام نقطة البيع المتطور"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="{Binding CurrentModeDisplay}"
                                   FontSize="14" 
                                   Foreground="#CBD5E1" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Search Toggle Button -->
                    <Button Grid.Column="1" 
                            Style="{StaticResource SearchButtonStyle}"
                            Width="140" Height="40"
                            Margin="0,0,16,0"
                            Command="{Binding ToggleInvoiceSearchCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍" Style="{StaticResource IconStyle}" 
                                       Margin="0,0,8,0" FontSize="16"/>
                            <TextBlock Text="{Binding IsInvoiceSearchVisible, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='إغلاق البحث|البحث عن فاتورة'}" 
                                       FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <!-- Enhanced invoice number display with loading state -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Left">
                        <!-- Invoice Number with Loading Indicator -->
                        <Grid>
                            <TextBlock Text="{Binding CurrentInvoice.InvoiceNumber, StringFormat='فاتورة رقم: {0}'}" 
                                       FontSize="16" FontWeight="SemiBold" 
                                       Foreground="#60A5FA"
                                       Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                            <!-- Loading State for Invoice Number -->
                            <StackPanel Orientation="Horizontal"
                                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="جاري توليد رقم الفاتورة..." 
                                           FontSize="14" FontStyle="Italic"
                                           Foreground="#6B7280"/>
                                <Border Width="16" Height="16" Margin="8,0,0,0">
                                    <!-- Spinning loader animation -->
                                    <Ellipse Fill="#60A5FA" Opacity="0.6">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform/>
                                        </Ellipse.RenderTransform>
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                         From="0" To="360" Duration="0:0:1"
                                                                         RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="{Binding CurrentDateTime, StringFormat='{}{0:yyyy/MM/dd - HH:mm:ss}'}" 
                                   FontSize="13" Foreground="#CBD5E1" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- NEW: Invoice Search Section -->
            <Border Grid.Row="1" 
                    Style="{StaticResource SearchCardStyle}"
                    Padding="24,20" 
                    Margin="0,0,0,24"
                    Visibility="{Binding IsInvoiceSearchVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="🔍" Style="{StaticResource IconStyle}" 
                                   Foreground="White" Margin="0,0,12,0"/>
                        <TextBlock Text="البحث عن الفواتير الموجودة" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="White"/>
                        <Border Background="#1E40AF" 
                                CornerRadius="12" 
                                Padding="8,4" 
                                Margin="16,0,0,0"
                                Visibility="{Binding InvoiceSearchResults.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="{Binding InvoiceSearchResults.Count, StringFormat='{}{0} نتيجة'}" 
                                       FontSize="12" FontWeight="Medium" 
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Search Input and Controls -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding InvoiceSearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource SearchTextBoxStyle}"
                                 FontSize="16"
                                 Height="48"
                                 Background="White"
                                 Margin="0,0,12,0"
                                 x:Name="InvoiceSearchTextBox">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding LoadSelectedInvoiceCommand}"/>
                                <KeyBinding Key="Escape" Command="{Binding ClearInvoiceSearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <Button Grid.Column="1" 
                                Style="{StaticResource SuccessButtonStyle}"
                                Width="120" Height="48"
                                Margin="0,0,8,0"
                                Command="{Binding LoadSelectedInvoiceCommand}"
                                IsEnabled="{Binding SelectedInvoiceSearchResult, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📂" Style="{StaticResource IconStyle}" 
                                           Margin="0,0,6,0" FontSize="16"/>
                                <TextBlock Text="تحميل"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="100" Height="48"
                                Command="{Binding ClearInvoiceSearchCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗑️" Style="{StaticResource IconStyle}" 
                                           Margin="0,0,6,0" FontSize="14"/>
                                <TextBlock Text="مسح"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Search Results -->
                    <ScrollViewer Grid.Row="2" 
              MaxHeight="300" 
              VerticalScrollBarVisibility="Auto"
              Visibility="{Binding InvoiceSearchResults.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding InvoiceSearchResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource SearchResultItemStyle}">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                      Command="{Binding DataContext.SelectInvoiceSearchResultCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Selection Indicator -->
                                            <Border Grid.Column="0" 
                                Width="4" Height="40" 
                                Background="#3B82F6" 
                                CornerRadius="2"
                                Margin="0,0,12,0"
                                Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                            <!-- Invoice Details -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding DisplayText}" 
                                       FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#1F2937"/>
                                                <TextBlock Text="{Binding SecondaryText}" 
                                       FontSize="12" 
                                       Foreground="#6B7280" 
                                       Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Quick Action -->
                                            <Button Grid.Column="2" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="80" Height="32"
                                Content="تحديد"
                                FontSize="12"
                                Command="{Binding DataContext.SelectInvoiceSearchResultCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Enhanced No Results Message -->
                    <Border Grid.Row="2" 
        Background="White" 
        CornerRadius="8" 
        Padding="20"
        Visibility="{Binding InvoiceSearchResults.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverse}">
                        <StackPanel HorizontalAlignment="Center"
                Visibility="{Binding InvoiceSearchTerm, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="🔍" 
                   FontSize="32" 
                   HorizontalAlignment="Center" 
                   Opacity="0.5"/>
                            <TextBlock Text="لا توجد فواتير مطابقة لمصطلح البحث" 
                   FontSize="14" 
                   Foreground="#6B7280" 
                   HorizontalAlignment="Center" 
                   Margin="0,8,0,0"/>
                            <TextBlock Text="جرب استخدام رقم الفاتورة أو اسم العميل" 
                   FontSize="12" 
                   Foreground="#9CA3AF" 
                   HorizontalAlignment="Center" 
                   Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- NEW: Edit Mode Indicator -->
            <Border Grid.Row="2" 
                    Style="{StaticResource EditModeCardStyle}"
                    Padding="20,12" 
                    Margin="0,0,0,16"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="✏️" Style="{StaticResource IconStyle}" 
                               Foreground="White" Margin="0,0,12,0" FontSize="20"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="وضع التعديل مفعل" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="{Binding CurrentModeDisplay}" 
                                   FontSize="13" 
                                   Foreground="#FECACA" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="2" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Background="#DC2626"
                            Width="120"
                            Command="{Binding NewInvoiceCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" Style="{StaticResource IconStyle}" 
                                       Margin="0,0,6,0" FontSize="14"/>
                            <TextBlock Text="فاتورة جديدة"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Customer & Truck Selection Section -->
            <Grid Grid.Row="3" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Customer Selection Card -->
                <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Padding="24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="👤" Style="{StaticResource IconStyle}" 
                                       Foreground="#3B82F6" Margin="0,0,8,0"/>
                            <TextBlock Text="بيانات العميل" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="اختيار العميل" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <ComboBox x:Name="CustomerSelectionComboBox"
                                      Grid.Row="2"
                                      ItemsSource="{Binding Customers}"
                                      SelectedItem="{Binding SelectedCustomer}"
                                      DisplayMemberPath="CustomerName"
                                      Style="{StaticResource ModernComboBoxStyle}"/>

                            <TextBlock Grid.Row="4" Text="رقم الهاتف" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <TextBox Grid.Row="4" Margin="0,18,0,0"
                                     Text="{Binding SelectedCustomer.PhoneNumber}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     IsReadOnly="True"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Truck Selection Card -->
                <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}" Padding="24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="🚚" Style="{StaticResource IconStyle}" 
                                       Foreground="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Text="بيانات الشاحنة" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="رقم الشاحنة" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <ComboBox x:Name="TruckSelectionComboBox"
                                      Grid.Row="2"
                                      ItemsSource="{Binding AvailableTrucks}"
                                      SelectedItem="{Binding SelectedTruck}"
                                      DisplayMemberPath="TruckNumber"
                                      Style="{StaticResource ModernComboBoxStyle}"/>

                            <TextBlock Grid.Row="4" Text="اسم السائق" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <TextBox Grid.Row="4" Margin="0,18,0,0"
                                     Text="{Binding SelectedTruck.DriverName}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     IsReadOnly="True"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Invoice Items Section -->
            <Border Grid.Row="4" 
                    Style="{StaticResource ModernCardStyle}" 
                    Padding="0" 
                    Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Section Header -->
                    <Border Grid.Row="0" 
                            Background="#F8FAFC" 
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,0,0,1"
                            Padding="24,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="📊" Style="{StaticResource IconStyle}" 
                                           Foreground="#374151" Margin="0,0,12,0"/>
                                <TextBlock Text="بنود الفاتورة" 
                                           FontSize="18" FontWeight="SemiBold" 
                                           Foreground="#374151"/>
                                <Border Background="#EFF6FF" 
                                        CornerRadius="12" 
                                        Padding="8,4" 
                                        Margin="16,0,0,0">
                                    <TextBlock Text="{Binding InvoiceItems.Count, StringFormat='{}{0} صف'}" 
                                               FontSize="12" FontWeight="Medium" 
                                               Foreground="#1E40AF"/>
                                </Border>
                                <!-- Edit Mode Indicator -->
                                <Border Background="#FEF2F2" 
                                        BorderBrush="#EF4444"
                                        BorderThickness="1"
                                        CornerRadius="12" 
                                        Padding="8,4" 
                                        Margin="12,0,0,0"
                                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="تعديل" 
                                               FontSize="11" FontWeight="Bold" 
                                               Foreground="#DC2626"/>
                                </Border>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Style="{StaticResource SuccessButtonStyle}"
                                    Width="140"
                                    Command="{Binding AddInvoiceItemCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" Style="{StaticResource IconStyle}" 
                                               Margin="0,0,8,0" FontSize="14"/>
                                    <TextBlock Text="إضافة صف"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Enhanced DataGrid with Horizontal Scrolling -->
                    <ScrollViewer Grid.Row="1" 
                                  HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="400">
                        <DataGrid x:Name="InvoiceItemsDataGrid"
                                  ItemsSource="{Binding InvoiceItems}"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource ModernDataGridHeaderStyle}"
                                  CellStyle="{StaticResource ModernDataGridCellStyle}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  MinWidth="1200">

                            <DataGrid.Columns>
                                <!-- Date Column -->
                                <DataGridTemplateColumn Header="التاريخ" Width="120" MinWidth="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DatePicker SelectedDate="{Binding InvoiceDate, UpdateSourceTrigger=PropertyChanged}"
                                                        BorderThickness="0" 
                                                        Background="Transparent"
                                                        HorizontalAlignment="Stretch"
                                                        Margin="4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Gross Weight -->
                                <DataGridTemplateColumn Header="الوزن الإجمالي (كغم)" Width="130" MinWidth="130">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding GrossWeight, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                                     Style="{StaticResource TableInputCellStyle}"
                                                     Background="White"
                                                     Foreground="#1F2937"
                                                     BorderThickness="1"
                                                     BorderBrush="#D1D5DB"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Cages Count -->
                                <DataGridTemplateColumn Header="عدد الأقفاص" Width="100" MinWidth="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding CagesCount, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource TableInputCellStyle}"
                                                     Background="White"
                                                     Foreground="#1F2937"
                                                     BorderThickness="1"
                                                     BorderBrush="#D1D5DB"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Cage Weight -->
                                <DataGridTemplateColumn Header="وزن القفص (كغم)" Width="120" MinWidth="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding CageWeight, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                                     Style="{StaticResource TableInputCellStyle}"
                                                     Background="White"
                                                     Foreground="#1F2937"
                                                     BorderThickness="1"
                                                     BorderBrush="#D1D5DB"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Total Cages Weight (Calculated) -->
                                <DataGridTextColumn Header="وزن الأقفاص الصافي (كغم)" 
                                                    Width="140" MinWidth="140"
                                                    Binding="{Binding CagesWeight, StringFormat=N2}"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource ModernDataGridCellStyle}">
                                            <Setter Property="Background" Value="#EFF6FF"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#1E40AF"/>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>

                                <!-- Net Weight (Calculated) -->
                                <DataGridTextColumn Header="الوزن الصافي (كغم)" 
                                                    Width="130" MinWidth="130"
                                                    Binding="{Binding NetWeight, StringFormat=N2}"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource ModernDataGridCellStyle}">
                                            <Setter Property="Background" Value="#ECFDF5"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#065F46"/>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>

                                <!-- Unit Price -->
                                <DataGridTemplateColumn Header="سعر الكيلو (USD)" Width="120" MinWidth="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                                     Style="{StaticResource TableInputCellStyle}"
                                                     Background="White"
                                                     Foreground="#1F2937"
                                                     BorderThickness="1"
                                                     BorderBrush="#D1D5DB"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Total Amount (Calculated) -->
                                <DataGridTextColumn Header="المبلغ الإجمالي (USD)" 
                                                    Width="140" MinWidth="140"
                                                    Binding="{Binding TotalAmount, StringFormat=N2}"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource ModernDataGridCellStyle}">
                                            <Setter Property="Background" Value="#FEF3C7"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#92400E"/>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>

                                <!-- Discount Percentage -->
                                <DataGridTemplateColumn Header="نسبة الخصم (%)" Width="110" MinWidth="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding DiscountPercentage, UpdateSourceTrigger=PropertyChanged, StringFormat=N1}"
                                                     Style="{StaticResource TableInputCellStyle}"
                                                     Background="White"
                                                     Foreground="#1F2937"
                                                     BorderThickness="1"
                                                     BorderBrush="#D1D5DB"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Final Amount (Calculated) -->
                                <DataGridTextColumn Header="المبلغ النهائي (USD)" 
                                                    Width="140" MinWidth="140"
                                                    Binding="{Binding FinalAmount, StringFormat=N2}"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource ModernDataGridCellStyle}">
                                            <Setter Property="Background" Value="#F0FDF4"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#166534"/>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>

                                <!-- Actions -->
                                <DataGridTemplateColumn Header="إجراءات" Width="80" MinWidth="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource DangerButtonStyle}"
                                                    Width="36" Height="32"
                                                    Command="{Binding DataContext.RemoveInvoiceItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="حذف الصف">
                                                <TextBlock Text="🗑️" Style="{StaticResource IconStyle}" FontSize="12"/>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Enhanced Summary Section with Payment Processing -->
            <Grid Grid.Row="5" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Invoice Summary Card -->
                <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Padding="24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="📄" Style="{StaticResource IconStyle}" 
                                       Foreground="#6366F1" Margin="0,0,8,0"/>
                            <TextBlock Text="ملخص الفاتورة" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="رقم الفاتورة:" 
                                       FontSize="14" FontWeight="Medium" 
                                       Foreground="#6B7280" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentInvoice.InvoiceNumber}" 
                                       FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#374151" VerticalAlignment="Center" 
                                       HorizontalAlignment="Left" Margin="12,0,0,0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="عدد البنود:" 
                                       FontSize="14" FontWeight="Medium" 
                                       Foreground="#6B7280" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding InvoiceItems.Count}" 
                                       FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#374151" VerticalAlignment="Center" 
                                       HorizontalAlignment="Left" Margin="12,0,0,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="الرصيد السابق:" 
                                       FontSize="14" FontWeight="Medium" 
                                       Foreground="#6B7280" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentInvoice.PreviousBalance, StringFormat='{}{0:N2} USD'}" 
                                       FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#374151" VerticalAlignment="Center" 
                                       HorizontalAlignment="Left" Margin="12,0,0,0"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="الرصيد الحالي:" 
                                       FontSize="14" FontWeight="Medium" 
                                       Foreground="#6B7280" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentInvoice.CurrentBalance, StringFormat='{}{0:N2} USD'}" 
                                       FontSize="14" FontWeight="Bold" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left" Margin="12,0,0,0"
                                       Foreground="{Binding CurrentInvoice.CurrentBalance, Converter={StaticResource DebtColorConverter}}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Payment Processing Card -->
                <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}" Padding="24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="💳" Style="{StaticResource IconStyle}" 
                                       Foreground="#059669" Margin="0,0,8,0"/>
                            <TextBlock Text="معالجة الدفعة" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Amount Due Display -->
                            <Border Grid.Row="0" 
                                    Background="#F0F9FF" 
                                    BorderBrush="#0EA5E9"
                                    BorderThickness="1"
                                    CornerRadius="8" 
                                    Padding="12,8"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="المبلغ المستحق:" 
                                               FontSize="12" FontWeight="Medium" 
                                               Foreground="#0C4A6E" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding AmountDueDisplay, StringFormat='{}{0} USD'}"
                                               FontSize="14" FontWeight="Bold" 
                                               Foreground="#0C4A6E" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Payment Amount Input -->
                            <TextBlock Grid.Row="1" Text="المبلغ المدفوع:" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,8,0,6"/>
                            <TextBox Grid.Row="2" 
                                     Text="{Binding PaymentReceivedDisplay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Margin="0,0,0,8"/>

                            <!-- Quick Payment Buttons -->
                            <WrapPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
                                <Button Style="{StaticResource QuickPaymentButtonStyle}"
                                        Content="25%"
                                        Command="{Binding SetPercentagePaymentCommand}"
                                        CommandParameter="0.25"/>
                                <Button Style="{StaticResource QuickPaymentButtonStyle}"
                                        Content="50%"
                                        Command="{Binding SetPercentagePaymentCommand}"
                                        CommandParameter="0.50"/>
                                <Button Style="{StaticResource QuickPaymentButtonStyle}"
                                        Content="100%"
                                        Command="{Binding SetFullPaymentCommand}"/>
                            </WrapPanel>

                            <!-- Payment Method Selection -->
                            <TextBlock Grid.Row="4" Text="طريقة الدفع:" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,8,0,6"/>
                            <ComboBox Grid.Row="5"
                                      ItemsSource="{Binding AvailablePaymentMethods}"
                                      SelectedItem="{Binding PaymentMethod}"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      Margin="0,0,0,8"/>

                            <!-- Remaining Balance Display -->
                            <Border Grid.Row="6" 
                                    Padding="12,8"
                                    CornerRadius="8" 
                                    Margin="0,8,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFullyPaid}" Value="True">
                                                <Setter Property="Background" Value="#F0FDF4"/>
                                                <Setter Property="BorderBrush" Value="#22C55E"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsPartialPayment}" Value="True">
                                                <Setter Property="Background" Value="#FEF3C7"/>
                                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsOverpayment}" Value="True">
                                                <Setter Property="Background" Value="#EFF6FF"/>
                                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="BorderBrush" Value="#9CA3AF"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="12" FontWeight="Medium">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFullyPaid}" Value="True">
                                                        <Setter Property="Text" Value="مدفوع بالكامل"/>
                                                        <Setter Property="Foreground" Value="#15803D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsPartialPayment}" Value="True">
                                                        <Setter Property="Text" Value="الرصيد المتبقي:"/>
                                                        <Setter Property="Foreground" Value="#92400E"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsOverpayment}" Value="True">
                                                        <Setter Property="Text" Value="مبلغ زائد:"/>
                                                        <Setter Property="Foreground" Value="#1E40AF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Text" Value="الرصيد المتبقي:"/>
                                                <Setter Property="Foreground" Value="#6B7280"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="13" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFullyPaid}" Value="True">
                                                        <Setter Property="Text" Value="✓"/>
                                                        <Setter Property="Foreground" Value="#15803D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsOverpayment}" Value="True">
                                                        <Setter Property="Text" Value="{Binding PaymentReceived, Converter={StaticResource CurrencyConverter}}"/>
                                                        <Setter Property="Foreground" Value="#1E40AF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Text" Value="{Binding RemainingBalanceDisplay, StringFormat='{}{0} USD'}"/>
                                                <Setter Property="Foreground" Value="#6B7280"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Totals Card -->
                <Border Grid.Column="4" Style="{StaticResource ModernCardStyle}" Padding="24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="🧮" Style="{StaticResource IconStyle}" 
                                       Foreground="#DC2626" Margin="0,0,8,0"/>
                            <TextBlock Text="الإجماليات" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Total Weight -->
                            <Border Grid.Row="0" 
                                    Background="#F0F9FF" 
                                    BorderBrush="#0EA5E9"
                                    BorderThickness="1"
                                    CornerRadius="8" 
                                    Padding="16,12"
                                    Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="إجمالي الوزن الصافي" 
                                               FontSize="13" FontWeight="Medium" 
                                               Foreground="#0C4A6E" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TotalNetWeight, StringFormat='{}{0:N2} كغم'}"
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="#0C4A6E" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Total Amount -->
                            <Border Grid.Row="1" 
                                    Background="#F0FDF4" 
                                    BorderBrush="#22C55E"
                                    BorderThickness="1"
                                    CornerRadius="8" 
                                    Padding="16,12" 
                                    Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="إجمالي المبلغ" 
                                               FontSize="13" FontWeight="Medium" 
                                               Foreground="#15803D" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TotalAmount, StringFormat='{}{0:N2} USD'}"
                                               FontSize="18" FontWeight="Bold" 
                                               Foreground="#15803D" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Total Discount -->
                            <Border Grid.Row="2" 
                                    Background="#FEF2F2" 
                                    BorderBrush="#EF4444"
                                    BorderThickness="1"
                                    CornerRadius="8" 
                                    Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="إجمالي الخصم" 
                                               FontSize="13" FontWeight="Medium" 
                                               Foreground="#DC2626" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TotalDiscount, StringFormat='{}{0:N2} USD'}"
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="#DC2626" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Enhanced Actions Section -->
            <Border Grid.Row="6" 
                    Style="{StaticResource ModernCardStyle}" 
                    Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Enhanced Shortcuts Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="⌨️" Style="{StaticResource IconStyle}" 
                                   Foreground="#6B7280" Margin="0,0,8,0"/>
                        <TextBlock FontSize="12" FontWeight="Medium" Foreground="#6B7280" VerticalAlignment="Center">
                            <Run Text="اختصارات لوحة المفاتيح: F1-العميل | F2-جديد | Ctrl+S-حفظ | Ctrl+Enter-حفظ وطباعة"/>
                            <LineBreak/>
                            <Run Text="البحث: Ctrl+F-بحث | Enter-تحميل | Escape-مسح | معالجة الدفعات: Alt+P-مبلغ كامل"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Enhanced Action Buttons with Payment Status -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource SecondaryButtonStyle}" 
                                Width="120"
                                Command="{Binding NewInvoiceCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" Style="{StaticResource IconStyle}" 
                                           Margin="0,0,6,0" FontSize="14"/>
                                <TextBlock Text="فاتورة جديدة"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource WarningButtonStyle}" 
                                Width="120"
                                Command="{Binding PrintPreviousInvoiceCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📜" Style="{StaticResource IconStyle}" 
                                           Margin="0,0,6,0" FontSize="14"/>
                                <TextBlock Text="طباعة سابقة"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource PrimaryButtonStyle}" 
                                Width="110"
                                Command="{Binding SaveInvoiceCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💾" Style="{StaticResource IconStyle}" 
                                           Margin="0,0,6,0" FontSize="14"/>
                                <TextBlock Text="{Binding SaveButtonText}"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SuccessButtonStyle}" 
                                Width="150"
                                Command="{Binding SaveAndPrintInvoiceCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🖨️" Style="{StaticResource IconStyle}" 
                                           Margin="0,0,6,0" FontSize="14"/>
                                <TextBlock Text="حفظ وطباعة ودفع"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Enhanced Loading Overlay -->
            <Border Grid.RowSpan="7" 
                    Background="#80000000"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    CornerRadius="12">
                <Border Background="White" 
                        CornerRadius="16" 
                        Padding="40"
                        MaxWidth="300"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="48" Height="48" Margin="0,0,0,20"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <RotateTransform/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                             From="0" To="360" Duration="0:0:1.5"
                                                             RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <Ellipse Fill="#3B82F6" Opacity="0.2"/>
                        </Border>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#374151" TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>