<!-- PoultrySlaughterPOS/Views/CustomerAccountsView.xaml -->
<!-- Enterprise-grade Customer Accounts View with complete debt settlement integration -->
<!-- ENHANCED: Eliminates all converter chaining issues with specialized composite converters -->
<UserControl x:Class="PoultrySlaughterPOS.Views.CustomerAccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PoultrySlaughterPOS.Converters"
             xmlns:viewmodels="clr-namespace:PoultrySlaughterPOS.ViewModels"
             x:Name="CustomerAccountsViewControl"
             FlowDirection="RightToLeft"
             FontFamily="Segoe UI"
             Background="#F8FAFC">

    <UserControl.Resources>
        <!-- Complete Value Converter Collection - No Chaining Required -->

        <!-- Core System Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <!-- Financial and Currency Converters -->
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:DebtColorConverter x:Key="DebtColorConverter"/>
        <converters:WeightConverter x:Key="WeightConverter"/>
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:NumberFormatConverter x:Key="NumberFormatConverter"/>

        <!-- Customer Management Converters -->
        <converters:StatusIndicatorConverter x:Key="StatusIndicatorConverter"/>
        <converters:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
        <converters:TruckAvailabilityConverter x:Key="TruckAvailabilityConverter"/>
        <converters:RelativeDateConverter x:Key="RelativeDateConverter"/>

        <!-- Payment and Transaction Converters -->
        <converters:PaymentMethodToBrushConverter x:Key="PaymentMethodToBrushConverter"/>
        <converters:PaymentSumConverter x:Key="PaymentSumConverter"/>
        <converters:InvoiceSumConverter x:Key="InvoiceSumConverter"/>
        <converters:PaymentCountConverter x:Key="PaymentCountConverter"/>

        <!-- COMPOSITE CONVERTERS - Eliminates Converter Chaining -->
        <converters:PaymentSumCurrencyConverter x:Key="PaymentSumCurrencyConverter"/>
        <converters:InvoiceSumCurrencyConverter x:Key="InvoiceSumCurrencyConverter"/>
        <converters:WeightUnitConverter x:Key="WeightUnitConverter"/>
        <converters:DebtCurrencyConverter x:Key="DebtCurrencyConverter"/>

        <!-- Enterprise-Grade UI Styles -->

        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.06" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Card Style -->
        <Style x:Key="HeaderCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E293B" Offset="0"/>
                        <GradientStop Color="#334155" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <!-- Payment Highlight Card Style -->
        <Style x:Key="PaymentHighlightCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <!-- Financial Card Style -->
        <Style x:Key="FinancialCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F0FDF4" Offset="0"/>
                        <GradientStop Color="#DCFCE7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#BBF7D0"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Modern Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="PaymentButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="QuickPaymentButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#059669"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Modern Input Styles -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F5F9"/>
            <Setter Property="RowHeight" Value="52"/>
            <Setter Property="ColumnHeaderHeight" Value="56"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="RowBackground" Value="White"/>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCustomerDetailsVisible}" Value="True">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsPaymentHistoryVisible}" Value="True">
                    <Setter Property="Background" Value="#10B981"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsTransactionHistoryVisible}" Value="True">
                    <Setter Property="Background" Value="#F59E0B"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsDebtAnalysisVisible}" Value="True">
                    <Setter Property="Background" Value="#8B5CF6"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Text Style -->
        <Style x:Key="IconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Statistics Card Style -->
        <Style x:Key="StatisticsCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="MinWidth" Value="160"/>
        </Style>

        <!-- Collection Statistics Card Style -->
        <Style x:Key="CollectionStatsCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Background" Value="#F0FDF4"/>
            <Setter Property="BorderBrush" Value="#BBF7D0"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Scrollable Container -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Collection Statistics -->
                <RowDefinition Height="Auto"/>
                <!-- Customer Statistics -->
                <RowDefinition Height="Auto"/>
                <!-- Search & Filters -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- System Header -->
            <Border Grid.Row="0" 
                    Style="{StaticResource HeaderCardStyle}"
                    Padding="32,20" 
                    Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="إدارة حسابات الزبائن وتسديد الديون"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="إدارة شاملة لمعلومات الزبائن والحسابات المالية مع نظام تسديد متقدم"
                                   FontSize="14" 
                                   Foreground="#CBD5E1" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#60A5FA"/>
                        <TextBlock Text="{Binding TotalRecords, StringFormat='إجمالي الزبائن: {0}'}" 
                                   FontSize="13" Foreground="#CBD5E1" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ENHANCED: Collection Statistics Cards -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                <!-- Today's Collections -->
                <Border Style="{StaticResource CollectionStatsCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="💰" Style="{StaticResource IconStyle}" 
                                   Foreground="#059669" FontSize="28" Margin="0,0,0,6"/>
                        <TextBlock Text="تحصيل اليوم" FontSize="11" Foreground="#065F46" 
                                   HorizontalAlignment="Center" Margin="0,0,0,2"/>
                        <!-- FIXED: Single converter usage -->
                        <TextBlock Text="{Binding TotalCollectionsToday, Converter={StaticResource CurrencyConverter}, ConverterParameter=USD}" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#047857" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Payments Count Today -->
                <Border Style="{StaticResource CollectionStatsCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📊" Style="{StaticResource IconStyle}" 
                                   Foreground="#059669" FontSize="28" Margin="0,0,0,6"/>
                        <TextBlock Text="دفعات اليوم" FontSize="11" Foreground="#065F46" 
                                   HorizontalAlignment="Center" Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding PaymentsProcessedToday}" FontSize="16" FontWeight="Bold" 
                                   Foreground="#047857" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Average Payment -->
                <Border Style="{StaticResource CollectionStatsCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📈" Style="{StaticResource IconStyle}" 
                                   Foreground="#059669" FontSize="28" Margin="0,0,0,6"/>
                        <TextBlock Text="متوسط الدفعة" FontSize="11" Foreground="#065F46" 
                                   HorizontalAlignment="Center" Margin="0,0,0,2"/>
                        <!-- FIXED: Single converter usage -->
                        <TextBlock Text="{Binding AveragePaymentAmount, Converter={StaticResource CurrencyConverter}, ConverterParameter=USD}" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#047857" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Collection Efficiency -->
                <Border Style="{StaticResource CollectionStatsCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="⚡" Style="{StaticResource IconStyle}" 
                                   Foreground="#059669" FontSize="28" Margin="0,0,0,6"/>
                        <TextBlock Text="كفاءة التحصيل" FontSize="11" Foreground="#065F46" 
                                   HorizontalAlignment="Center" Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding CollectionEfficiencyRate, Converter={StaticResource PercentageConverter}}" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#047857" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Border Style="{StaticResource ModernCardStyle}" Padding="16,12" Margin="16,4,4,4">
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource PaymentButtonStyle}" 
                                Width="100" Height="36"
                                Command="{Binding RefreshCollectionStatisticsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" Style="{StaticResource IconStyle}" 
                                           Margin="0,0,4,0" FontSize="12"/>
                                <TextBlock Text="تحديث" FontSize="12"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource WarningButtonStyle}" 
                                Width="120" Height="36"
                                Command="{Binding SettleAllDebtsCommand}"
                                Visibility="{Binding CustomersWithDebtCount, Converter={StaticResource CountToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💸" Style="{StaticResource IconStyle}" 
                                           Margin="0,0,4,0" FontSize="12"/>
                                <TextBlock Text="تسوية شاملة" FontSize="12"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SecondaryButtonStyle}" 
                                Width="120" Height="36"
                                Command="{Binding ProcessBulkPaymentsCommand}"
                                Visibility="{Binding CustomersWithDebtCount, Converter={StaticResource CountToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💳" Style="{StaticResource IconStyle}" 
                                           Margin="0,0,4,0" FontSize="12"/>
                                <TextBlock Text="دفعات جماعية" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Customer Statistics Cards -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
                <!-- Total Customers -->
                <Border Style="{StaticResource StatisticsCardStyle}" Background="#EFF6FF">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="👥" Style="{StaticResource IconStyle}" 
                                   Foreground="#3B82F6" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock Text="إجمالي الزبائن" FontSize="12" Foreground="#6B7280" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalCustomersCount, Converter={StaticResource NumberFormatConverter}}" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="#1E40AF" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Active Customers -->
                <Border Style="{StaticResource StatisticsCardStyle}" Background="#F0FDF4">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="✅" Style="{StaticResource IconStyle}" 
                                   Foreground="#10B981" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock Text="الزبائن النشطين" FontSize="12" Foreground="#6B7280" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding ActiveCustomersCount, Converter={StaticResource NumberFormatConverter}}" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="#059669" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Total Debt -->
                <Border Style="{StaticResource StatisticsCardStyle}" Background="#FEF2F2">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="💰" Style="{StaticResource IconStyle}" 
                                   Foreground="#EF4444" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock Text="إجمالي الديون" FontSize="12" Foreground="#6B7280" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <!-- FIXED: Single converter usage -->
                        <TextBlock Text="{Binding TotalDebtAmount, Converter={StaticResource CurrencyConverter}, ConverterParameter=USD}" 
                                   FontSize="20" FontWeight="Bold" 
                                   Foreground="#DC2626" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Customers with Debt -->
                <Border Style="{StaticResource StatisticsCardStyle}" Background="#FFF7ED">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="⚠️" Style="{StaticResource IconStyle}" 
                                   Foreground="#F59E0B" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock Text="زبائن مديونين" FontSize="12" Foreground="#6B7280" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding CustomersWithDebtCount}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#D97706" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Search and Filters Section -->
            <Border Grid.Row="3" 
                    Style="{StaticResource ModernCardStyle}" 
                    Padding="24,20" 
                    Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="🔍" Style="{StaticResource IconStyle}" 
                                   Foreground="#6B7280" Margin="0,0,12,0"/>
                        <TextBlock Text="البحث والتصفية" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    </StackPanel>

                    <!-- Filter Controls -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Text -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="البحث (الاسم، الهاتف، العنوان)" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     x:Name="SearchTextBox"/>
                        </StackPanel>

                        <!-- Filter Options -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="خيارات التصفية" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <StackPanel>
                                <CheckBox Content="النشطين فقط" IsChecked="{Binding ShowActiveOnly}" 
                                          Margin="0,4"/>
                                <CheckBox Content="المديونين فقط" IsChecked="{Binding ShowDebtOnly}" 
                                          Margin="0,4"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Minimum Debt Filter -->
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="أقل مبلغ دين (USD)" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding MinimumDebtFilter, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Bottom">
                            <Button Style="{StaticResource PrimaryButtonStyle}" 
                                    Width="100"
                                    Command="{Binding RefreshDataCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔄" Style="{StaticResource IconStyle}" 
                                               Margin="0,0,6,0" FontSize="14"/>
                                    <TextBlock Text="تحديث"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource SecondaryButtonStyle}" 
                                    Width="100"
                                    Command="{Binding ClearFiltersCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🧹" Style="{StaticResource IconStyle}" 
                                               Margin="0,0,6,0" FontSize="14"/>
                                    <TextBlock Text="مسح"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Customer List Panel -->
                <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Customer List Header -->
                        <Border Grid.Row="0" 
                                Background="#F8FAFC" 
                                BorderBrush="#E5E7EB"
                                BorderThickness="0,0,0,1"
                                Padding="20,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="👥" Style="{StaticResource IconStyle}" 
                                               Foreground="#374151" Margin="0,0,12,0"/>
                                    <TextBlock Text="قائمة الزبائن" 
                                               FontSize="16" FontWeight="SemiBold" 
                                               Foreground="#374151"/>
                                    <Border Background="#EFF6FF" 
                                            CornerRadius="12" 
                                            Padding="8,4" 
                                            Margin="12,0,0,0">
                                        <TextBlock Text="{Binding TotalRecords, StringFormat='{}{0} زبون'}" 
                                                   FontSize="12" FontWeight="Medium" 
                                                   Foreground="#1E40AF"/>
                                    </Border>
                                </StackPanel>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Width="120"
                                        Command="{Binding AddNewCustomerCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="➕" Style="{StaticResource IconStyle}" 
                                                   Margin="0,0,6,0" FontSize="14"/>
                                        <TextBlock Text="إضافة زبون"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Customer DataGrid -->
                        <DataGrid Grid.Row="1"
                                  x:Name="CustomersDataGrid"
                                  ItemsSource="{Binding Customers}"
                                  SelectedItem="{Binding SelectedCustomer}"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  Margin="12">

                            <DataGrid.Columns>
                                <!-- Status Indicator -->
                                <DataGridTemplateColumn Header="●" Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Width="16" Height="16" CornerRadius="8">
                                                <Border.Background>
                                                    <SolidColorBrush>
                                                        <SolidColorBrush.Color>
                                                            <MultiBinding Converter="{x:Static converters:StatusIndicatorConverter.Instance}">
                                                                <Binding Path="IsActive"/>
                                                                <Binding Path="TotalDebt"/>
                                                            </MultiBinding>
                                                        </SolidColorBrush.Color>
                                                    </SolidColorBrush>
                                                </Border.Background>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Customer Name -->
                                <DataGridTextColumn Header="اسم الزبون" 
                                                    Width="*"
                                                    Binding="{Binding CustomerName}"/>

                                <!-- Phone Number -->
                                <DataGridTextColumn Header="الهاتف" 
                                                    Width="120"
                                                    Binding="{Binding PhoneNumber}"/>

                                <!-- Total Debt -->
                                <DataGridTextColumn Header="الرصيد (USD)" 
                                                    Width="100"
                                                    Binding="{Binding TotalDebt, Converter={StaticResource DebtCurrencyConverter}, ConverterParameter=USD}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" 
                                                    Value="{Binding TotalDebt, Converter={StaticResource DebtColorConverter}}"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- ENHANCED: Quick Payment Actions -->
                                <DataGridTemplateColumn Header="تسديد سريع" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                                        Visibility="{Binding TotalDebt, Converter={StaticResource CountToVisibilityConverter}}">
                                                <Button Content="25%" 
                                                        Style="{StaticResource QuickPaymentButtonStyle}"
                                                        Width="28" Margin="1"
                                                        Command="{Binding DataContext.QuickPaymentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="0.25"
                                                        ToolTip="دفع 25% من الدين"/>
                                                <Button Content="50%" 
                                                        Style="{StaticResource QuickPaymentButtonStyle}"
                                                        Width="28" Margin="1"
                                                        Command="{Binding DataContext.QuickPaymentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="0.50"
                                                        ToolTip="دفع 50% من الدين"/>
                                                <Button Content="كامل" 
                                                        Style="{StaticResource QuickPaymentButtonStyle}"
                                                        Width="32" Margin="1"
                                                        Command="{Binding DataContext.QuickPaymentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="1.0"
                                                        ToolTip="دفع كامل الدين"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- ENHANCED: Payment Actions Bar -->
                        <Border Grid.Row="2" 
                                Style="{StaticResource PaymentHighlightCardStyle}"
                                Padding="16,12"
                                Margin="12,0,12,0"
                                Visibility="{Binding HasSelectedCustomerWithDebt, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding SelectedCustomer.CustomerName, StringFormat='الزبون: {0}'}"
                                               FontSize="14" FontWeight="SemiBold" 
                                               Foreground="White"/>
                                    <!-- FIXED: Single converter usage -->
                                    <TextBlock Text="{Binding SelectedCustomer.TotalDebt, Converter={StaticResource DebtCurrencyConverter}, ConverterParameter=USD, StringFormat='الدين: {0}'}"
                                               FontSize="12" 
                                               Foreground="#D1FAE5"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Style="{StaticResource PaymentButtonStyle}" 
                                            Width="100" Height="36"
                                            Background="White" Foreground="#059669"
                                            Command="{Binding ProcessPaymentCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="💰" Style="{StaticResource IconStyle}" 
                                                       Margin="0,0,6,0" FontSize="14"/>
                                            <TextBlock Text="تسديد دين"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource PaymentButtonStyle}" 
                                            Width="80" Height="36"
                                            Background="#F59E0B" Foreground="White"
                                            Command="{Binding ViewPaymentHistoryCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📊" Style="{StaticResource IconStyle}" 
                                                       Margin="0,0,4,0" FontSize="12"/>
                                            <TextBlock Text="الدفعات" FontSize="12"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Customer Actions -->
                        <Border Grid.Row="3" 
                                Background="White" 
                                Padding="16,12">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource PrimaryButtonStyle}" 
                                        Width="100"
                                        Command="{Binding EditCustomerCommand}"
                                        IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✏️" Style="{StaticResource IconStyle}" 
                                                   Margin="0,0,6,0" FontSize="14"/>
                                        <TextBlock Text="تعديل"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource DangerButtonStyle}" 
                                        Width="100"
                                        Command="{Binding DeleteCustomerCommand}"
                                        IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🗑️" Style="{StaticResource IconStyle}" 
                                                   Margin="0,0,6,0" FontSize="14"/>
                                        <TextBlock Text="حذف"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Details Panel -->
                <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Details Header -->
                        <Border Grid.Row="0" 
                                Background="#F8FAFC" 
                                BorderBrush="#E5E7EB"
                                BorderThickness="0,0,0,1"
                                Padding="24,16">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="📊" Style="{StaticResource IconStyle}" 
                                           Foreground="#374151" Margin="0,0,12,0"/>
                                <TextBlock Text="تفاصيل الزبون" 
                                           FontSize="18" FontWeight="SemiBold" 
                                           Foreground="#374151"/>
                                <TextBlock Text="{Binding SelectedCustomer.CustomerName, StringFormat=' - {0}'}" 
                                           FontSize="16" FontWeight="Medium" 
                                           Foreground="#6B7280"
                                           Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>

                        <!-- ENHANCED: Tab Navigation with Payment History -->
                        <Border Grid.Row="1" 
                                Background="White" 
                                BorderBrush="#E5E7EB"
                                BorderThickness="0,0,0,1"
                                Padding="20,12">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="البيانات الأساسية" 
                                        Style="{StaticResource TabButtonStyle}"
                                        Width="120"
                                        Command="{Binding ShowCustomerDetailsCommand}"/>
                                <Button Content="المعاملات" 
                                        Style="{StaticResource TabButtonStyle}"
                                        Width="100"
                                        Command="{Binding ShowTransactionHistoryCommand}"/>
                                <Button Content="تاريخ الدفعات" 
                                        Style="{StaticResource TabButtonStyle}"
                                        Width="120"
                                        Command="{Binding ShowPaymentHistoryCommand}"/>
                                <Button Content="تحليل الديون" 
                                        Style="{StaticResource TabButtonStyle}"
                                        Width="120"
                                        Command="{Binding ShowDebtAnalysisCommand}"/>
                            </StackPanel>
                        </Border>

                        <!-- Content Area -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <Grid Margin="24">
                                <!-- Customer Details View -->
                                <StackPanel Visibility="{Binding IsCustomerDetailsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <!-- Customer Info Card -->
                                    <Border Style="{StaticResource ModernCardStyle}" 
                                            Padding="20" Margin="0,0,0,16"
                                            Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="الاسم:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedCustomer.CustomerName}" 
                                                       Margin="0,8"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="الهاتف:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedCustomer.PhoneNumber}" 
                                                       Margin="0,8"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="العنوان:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedCustomer.Address}" 
                                                       Margin="0,8"/>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="الرصيد الحالي:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <!-- FIXED: Single converter usage -->
                                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                                       Text="{Binding SelectedCustomer.TotalDebt, Converter={StaticResource DebtCurrencyConverter}, ConverterParameter=USD}" 
                                                       Foreground="{Binding SelectedCustomer.TotalDebt, Converter={StaticResource DebtColorConverter}}"
                                                       FontWeight="Bold" Margin="0,8"/>

                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="الحالة:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1" 
                                                       Text="{Binding SelectedCustomer.IsActive, Converter={StaticResource TruckAvailabilityConverter}}" 
                                                       Margin="0,8"/>

                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="تاريخ الإنشاء:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="5" Grid.Column="1" 
                                                       Text="{Binding SelectedCustomer.CreatedDate, Converter={StaticResource RelativeDateConverter}}" 
                                                       Margin="0,8"/>
                                        </Grid>
                                    </Border>

                                    <!-- ENHANCED: Payment Actions for Selected Customer -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                                Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Button Style="{StaticResource PaymentButtonStyle}" 
                                                Width="140"
                                                Command="{Binding ProcessPaymentCommand}"
                                                IsEnabled="{Binding CanProcessPayment}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="💰" Style="{StaticResource IconStyle}" 
                                                           Margin="0,0,6,0" FontSize="14"/>
                                                <TextBlock Text="تسديد دين"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource WarningButtonStyle}" 
                                                Width="140"
                                                Command="{Binding RecalculateCustomerBalanceCommand}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🧮" Style="{StaticResource IconStyle}" 
                                                           Margin="0,0,6,0" FontSize="14"/>
                                                <TextBlock Text="إعادة حساب الرصيد"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>

                                    <!-- No Selection Message -->
                                    <Border Style="{StaticResource ModernCardStyle}" 
                                            Padding="40" 
                                            HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert}">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="👤" Style="{StaticResource IconStyle}" 
                                                       FontSize="48" Foreground="#CBD5E1" Margin="0,0,0,16"/>
                                            <TextBlock Text="اختر زبون من القائمة لعرض التفاصيل" 
                                                       FontSize="16" Foreground="#6B7280" 
                                                       TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Transaction History View -->
                                <StackPanel Visibility="{Binding IsTransactionHistoryVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <!-- Date Range Filter -->
                                    <Border Style="{StaticResource ModernCardStyle}" 
                                            Padding="20" Margin="0,0,0,16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="16"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="من تاريخ" FontSize="13" FontWeight="Medium" 
                                                           Foreground="#6B7280" Margin="0,0,0,6"/>
                                                <DatePicker SelectedDate="{Binding StartDate}" 
                                                            Height="40" FontSize="14"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="إلى تاريخ" FontSize="13" FontWeight="Medium" 
                                                           Foreground="#6B7280" Margin="0,0,0,6"/>
                                                <DatePicker SelectedDate="{Binding EndDate}" 
                                                            Height="40" FontSize="14"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Invoice Summary Card -->
                                    <Border Style="{StaticResource FinancialCardStyle}" 
                                            Padding="20" Margin="0,0,0,16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <TextBlock Text="إجمالي الفواتير" FontSize="12" Foreground="#065F46" 
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding CustomerInvoices.Count}" FontSize="24" FontWeight="Bold" 
                                                           Foreground="#047857" HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <TextBlock Text="مجموع المبالغ" FontSize="12" Foreground="#065F46" 
                                                           HorizontalAlignment="Center"/>
                                                <!-- FIXED: Single composite converter usage -->
                                                <TextBlock Text="{Binding CustomerInvoices, Converter={StaticResource InvoiceSumCurrencyConverter}, ConverterParameter=USD}" 
                                                           FontSize="20" FontWeight="Bold" 
                                                           Foreground="#047857" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Invoices DataGrid -->
                                    <DataGrid ItemsSource="{Binding CustomerInvoices}"
                                              SelectedItem="{Binding SelectedInvoice}"
                                              Style="{StaticResource ModernDataGridStyle}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              MaxHeight="400">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="رقم الفاتورة" 
                                                                Width="120"
                                                                Binding="{Binding InvoiceNumber}"/>
                                            <DataGridTextColumn Header="التاريخ" 
                                                                Width="100"
                                                                Binding="{Binding InvoiceDate, StringFormat=yyyy/MM/dd}"/>
                                            <DataGridTextColumn Header="الوزن الصافي" 
                                                                Width="100"
                                                                Binding="{Binding NetWeight, Converter={StaticResource WeightUnitConverter}}"/>
                                            <DataGridTextColumn Header="المبلغ النهائي" 
                                                                Width="120"
                                                                Binding="{Binding FinalAmount, Converter={StaticResource CurrencyConverter}, ConverterParameter=USD}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>

                                <!-- ENHANCED: Payment History View with PaymentSumCurrencyConverter -->
                                <StackPanel Visibility="{Binding IsPaymentHistoryVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <!-- Payment Summary Card - FIXED: Using PaymentSumCurrencyConverter -->
                                    <Border Style="{StaticResource FinancialCardStyle}" 
                                            Padding="20" Margin="0,0,0,16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <TextBlock Text="إجمالي الدفعات" FontSize="12" Foreground="#065F46" 
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding CustomerPayments, Converter={StaticResource PaymentCountConverter}}" 
                                                           FontSize="18" FontWeight="Bold" 
                                                           Foreground="#047857" HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <TextBlock Text="مجموع المبالغ" FontSize="12" Foreground="#065F46" 
                                                           HorizontalAlignment="Center"/>
                                                <!-- FIXED: Single composite converter usage -->
                                                <TextBlock Text="{Binding CustomerPayments, Converter={StaticResource PaymentSumCurrencyConverter}, ConverterParameter=USD}" 
                                                           FontSize="20" FontWeight="Bold" 
                                                           Foreground="#047857" HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource PaymentButtonStyle}" 
                                                        Width="120" Height="36"
                                                        Command="{Binding ProcessPaymentCommand}"
                                                        IsEnabled="{Binding CanProcessPayment}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="➕" Style="{StaticResource IconStyle}" 
                                                                   Margin="0,0,6,0" FontSize="14"/>
                                                        <TextBlock Text="دفعة جديدة"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Payments DataGrid -->
                                    <DataGrid ItemsSource="{Binding CustomerPayments}"
                                              SelectedItem="{Binding SelectedPayment}"
                                              Style="{StaticResource ModernDataGridStyle}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              MaxHeight="400">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="التاريخ" 
                                                                Width="100"
                                                                Binding="{Binding PaymentDate, StringFormat=yyyy/MM/dd}"/>
                                            <DataGridTextColumn Header="المبلغ (USD)" 
                                                                Width="120"
                                                                Binding="{Binding Amount, Converter={StaticResource CurrencyConverter}, ConverterParameter=USD}">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#059669"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTemplateColumn Header="طريقة الدفع" Width="100">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{Binding PaymentMethod, Converter={StaticResource PaymentMethodToBrushConverter}}" 
                                                                CornerRadius="4" Padding="8,4">
                                                            <TextBlock Text="{Binding PaymentMethod}" 
                                                                       Foreground="White" FontSize="12" 
                                                                       HorizontalAlignment="Center"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="ملاحظات" 
                                                                Width="*"
                                                                Binding="{Binding Notes}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>

                                <!-- Debt Analysis View -->
                                <StackPanel Visibility="{Binding IsDebtAnalysisVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Border Style="{StaticResource ModernCardStyle}" Padding="40">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="📊" Style="{StaticResource IconStyle}" 
                                                       FontSize="48" Foreground="#8B5CF6" Margin="0,0,0,16"/>
                                            <TextBlock Text="تحليل الديون والتقارير المالية" 
                                                       FontSize="18" FontWeight="SemiBold" 
                                                       Foreground="#374151" TextAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="هذا القسم قيد التطوير وسيتضمن تحليلات متقدمة للديون والأداء المالي" 
                                                       FontSize="14" Foreground="#6B7280" 
                                                       TextAlignment="Center" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="5" 
                    Background="#80000000"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    CornerRadius="12">
                <Border Background="White" 
                        CornerRadius="16" 
                        Padding="40"
                        MaxWidth="300"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="48" Height="48" Margin="0,0,0,20"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <RotateTransform/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                             From="0" To="360" Duration="0:0:1.5"
                                                             RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <Ellipse Fill="#10B981" Opacity="0.2"/>
                        </Border>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#374151" TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>