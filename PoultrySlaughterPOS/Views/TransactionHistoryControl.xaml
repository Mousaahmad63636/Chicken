<UserControl x:Class="PoultrySlaughterPOS.Controls.TransactionHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" Direction="270" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FinancialCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1F2937"/>
        </Style>

        <Style x:Key="SummaryTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#6B7280"/>
        </Style>

        <Style x:Key="AmountTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#059669"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EBF8FF"/>
                    <Setter Property="Foreground" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsOverdue}" Value="True">
                    <Setter Property="Background" Value="#FEF2F2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource ModernCardStyle}" Padding="20" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="سجل المعاملات" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock x:Name="CustomerNameText" 
                               Text="لم يتم تحديد زبون" 
                               FontSize="14" 
                               Foreground="#6B7280" 
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" 
                            Content="تحديث" 
                            Style="{StaticResource FilterButtonStyle}"
                            Background="#10B981" 
                            Margin="0,0,8,0"/>
                    <Button x:Name="ExportButton" 
                            Content="تصدير" 
                            Style="{StaticResource FilterButtonStyle}"
                            Background="#F59E0B"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Date Range Filter -->
        <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}" Padding="20" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="من تاريخ" FontSize="13" FontWeight="Medium" 
                               Foreground="#6B7280" Margin="0,0,0,6"/>
                    <DatePicker x:Name="StartDatePicker"
                                Height="40" 
                                FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="إلى تاريخ" FontSize="13" FontWeight="Medium" 
                               Foreground="#6B7280" Margin="0,0,0,6"/>
                    <DatePicker x:Name="EndDatePicker"
                                Height="40" 
                                FontSize="14"/>
                </StackPanel>

                <Button Grid.Column="4" 
                        x:Name="ApplyFilterButton"
                        Content="تطبيق الفلتر" 
                        Style="{StaticResource ActionButtonStyle}"
                        Height="40" 
                        VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <!-- Summary Cards -->
        <Border Grid.Row="2" Style="{StaticResource FinancialCardStyle}" Padding="20" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Invoices -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="إجمالي الفواتير" Style="{StaticResource SummaryTextStyle}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalInvoicesText" 
                               Text="0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#374151" 
                               HorizontalAlignment="Center" 
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Total Amount -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="إجمالي المبلغ" Style="{StaticResource SummaryTextStyle}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalAmountText" 
                               Text="0.00 ج.م" 
                               Style="{StaticResource AmountTextStyle}" 
                               HorizontalAlignment="Center" 
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Paid Amount -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="المدفوع" Style="{StaticResource SummaryTextStyle}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PaidAmountText" 
                               Text="0.00 ج.م" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#10B981" 
                               HorizontalAlignment="Center" 
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Outstanding Amount -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="المتبقي" Style="{StaticResource SummaryTextStyle}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="OutstandingAmountText" 
                               Text="0.00 ج.م" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#DC2626" 
                               HorizontalAlignment="Center" 
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Transactions DataGrid -->
        <Border Grid.Row="3" Style="{StaticResource ModernCardStyle}" Padding="0">
            <Grid>
                <DataGrid x:Name="TransactionsDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#F3F4F6"
                          HeadersVisibility="Column"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}"
                          Background="White"
                          BorderThickness="0"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          SelectionMode="Single">

                    <DataGrid.Columns>
                        <!-- Invoice Number -->
                        <DataGridTextColumn Header="رقم الفاتورة" 
                                            Binding="{Binding InvoiceNumber}"
                                            Width="120"
                                            ElementStyle="{StaticResource {x:Type TextBlock}}"/>

                        <!-- Date -->
                        <DataGridTextColumn Header="التاريخ" 
                                            Binding="{Binding InvoiceDate, StringFormat=yyyy/MM/dd}"
                                            Width="100"
                                            ElementStyle="{StaticResource {x:Type TextBlock}}"/>

                        <!-- Truck -->
                        <DataGridTextColumn Header="الشاحنة" 
                                            Binding="{Binding TruckNumber}"
                                            Width="100"
                                            ElementStyle="{StaticResource {x:Type TextBlock}}"/>

                        <!-- Gross Weight -->
                        <DataGridTextColumn Header="الوزن الإجمالي" 
                                            Binding="{Binding GrossWeight, StringFormat=F2}"
                                            Width="120"
                                            ElementStyle="{StaticResource {x:Type TextBlock}}"/>

                        <!-- Net Weight -->
                        <DataGridTextColumn Header="الوزن الصافي" 
                                            Binding="{Binding NetWeight, StringFormat=F2}"
                                            Width="120"
                                            ElementStyle="{StaticResource {x:Type TextBlock}}"/>

                        <!-- Final Amount -->
                        <DataGridTextColumn Header="المبلغ النهائي" 
                                            Binding="{Binding FinalAmount, StringFormat=F2}"
                                            Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#059669"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Paid Amount -->
                        <DataGridTextColumn Header="المدفوع" 
                                            Binding="{Binding PaidAmount, StringFormat=F2}"
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="Foreground" Value="#10B981"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Outstanding Amount -->
                        <DataGridTextColumn Header="المتبقي" 
                                            Binding="{Binding OutstandingAmount, StringFormat=F2}"
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="Foreground" Value="#DC2626"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="الإجراءات" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="عرض" 
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="#6B7280"
                                                FontSize="11" 
                                                Height="28" 
                                                Width="50"
                                                Margin="0,0,4,0"
                                                Click="ViewInvoice_Click"
                                                Tag="{Binding}"/>
                                        <Button Content="طباعة" 
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="#059669"
                                                FontSize="11" 
                                                Height="28" 
                                                Width="50"
                                                Click="PrintInvoice_Click"
                                                Tag="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Loading Indicator -->
                <Grid x:Name="LoadingIndicator" 
                      Background="White" 
                      Opacity="0.8"
                      Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="6" 
                                     Margin="0,0,0,16"/>
                        <TextBlock Text="جاري تحميل المعاملات..." 
                                   FontSize="14" 
                                   Foreground="#6B7280" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- No Data State -->
                <StackPanel x:Name="NoDataState" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="📋" 
                               FontSize="48" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,16"/>
                    <TextBlock Text="لا توجد معاملات للفترة المحددة" 
                               FontSize="16" 
                               FontWeight="Medium" 
                               Foreground="#6B7280" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="جرب تغيير نطاق التاريخ أو اختر زبون آخر" 
                               FontSize="14" 
                               Foreground="#9CA3AF" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer with Pagination -->
        <Border Grid.Row="4" Style="{StaticResource ModernCardStyle}" Padding="20" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Record Count -->
                <TextBlock Grid.Column="0" 
                           x:Name="RecordCountText"
                           Text="0 معاملة" 
                           FontSize="13" 
                           Foreground="#6B7280" 
                           VerticalAlignment="Center"/>

                <!-- Export Options -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="ExportPdfButton"
                            Content="تصدير PDF" 
                            Style="{StaticResource FilterButtonStyle}"
                            Background="#DC2626" 
                            Margin="0,0,8,0"/>
                    <Button x:Name="ExportExcelButton"
                            Content="تصدير Excel" 
                            Style="{StaticResource FilterButtonStyle}"
                            Background="#059669"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>